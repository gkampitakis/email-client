{
	"name": "@gkampitakis/email-client",
	"version": "1.1.3",
	"description": "A module implementing an email client",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"scripts": {
		"test": "npm run clean && npm run eslint && jest",
		"build": "npm run clean && tsc",
		"format": "prettier --write ./src/**/*",
		"eslint": "eslint src/**/*.ts",
		"clean": "rimraf ./lib ./coverage",
		"prepublishOnly": "npm run build",
		"dev": "ts-node-dev --respawn --transpileOnly ./playground/playground.ts",
		"release": "semantic-release"
	},
	"keywords": [
		"email",
		"email-client",
		"sendgrid",
		"aws-ses",
		"postmark",
		"mailgun"
	],
	"author": "Georgios Kampitakis",
	"license": "ISC",
	"devDependencies": {
		"@commitlint/cli": "^9.1.1",
		"@commitlint/config-conventional": "^9.1.1",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/git": "^9.0.0",
		"@types/jest": "^26.0.7",
		"@types/node": "^14.0.27",
		"@types/nodemailer": "^6.4.0",
		"@types/postmark": "^2.0.3",
		"@typescript-eslint/eslint-plugin": "^3.7.1",
		"@typescript-eslint/parser": "^3.7.1",
		"eslint": "^7.5.0",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-plugin-import": "^2.22.0",
		"husky": "^4.2.5",
		"jest": "^26.2.1",
		"prettier": "^2.0.5",
		"pretty-quick": "^3.0.0",
		"rimraf": "^3.0.2",
		"semantic-release": "^17.1.1",
		"ts-jest": "^26.1.4",
		"ts-node-dev": "^1.0.0-pre.56",
		"typescript": "^3.9.7"
	},
	"dependencies": {
		"@gkampitakis/promise-util": "^1.3.0",
		"@sendgrid/mail": "^7.2.2",
		"aws-sdk": "^2.724.0",
		"file-type": "^14.6.2",
		"handlebars": "^4.7.6",
		"mailgun-js": "^0.22.0",
		"mjml": "^4.6.3",
		"nodemailer": "^6.4.11",
		"postmark": "^2.5.4"
	},
	"files": [
		"lib/**/*"
	],
	"jest": {
		"globals": {
			"ts-jest": {
				"diagnostics": false
			}
		},
		"verbose": true,
		"collectCoverage": true,
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"\\.ts$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/index.ts",
			"!src/**/*.d.ts"
		],
		"coverageThreshold": {
			"global": {
				"branches": 90,
				"functions": 90,
				"lines": 90,
				"statements": 90
			}
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gkampitakis/email-client.git"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	}
}
