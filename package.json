{
  "name": "template-email-client",
  "version": "1.1.0",
  "description": "A wrapper for email clients supporting templates",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "scripts": {
    "test": "npm run clean && npm run eslint && jest",
    "build": "npm run clean && tsc",
    "eslint": "eslint src/**/*.ts",
    "clean": "rm -rf ./lib ./coverage",
    "prepublishOnly": "npm run build",
    "example": "npm run build && cp -R example/templates lib/example/templates && node lib/example/example.js"
  },
  "keywords": [
    "email",
    "email-client",
    "sendgrid",
    "aws-ses",
    "postmark",
    "mailgun"
  ],
  "author": "Georgios Kampitakis",
  "license": "MIT",
  "devDependencies": {
    "@types/ejs": "^3.0.6",
    "@types/jest": "^26.0.23",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.2",
    "@types/postmark": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.3",
    "ts-jest": "^27.0.2",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.4",
    "aws-sdk": "^2.918.0",
    "ejs": "^3.1.6",
    "handlebars": "^4.7.7",
    "hashlru": "^2.3.0",
    "mailgun-js": "^0.22.0",
    "mime-types": "^2.1.30",
    "mjml": "^4.9.3",
    "nodemailer": "^6.6.1",
    "postmark": "^2.7.4"
  },
  "files": [
    "lib/src/**/*"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "verbose": true,
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/index.ts",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gkampitakis/email-client.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
