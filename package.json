{
	"name": "@gkampitakis/email-client",
	"version": "1.1.0",
	"description": "A module implementing an email client",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"scripts": {
		"test": "npm run clean && npm run eslint && jest",
		"build": "npm run clean && tsc",
		"format": "prettier --write \"src/**/*.ts\"",
		"eslint": "eslint src/**/*.ts",
		"clean": "rimraf ./lib ./coverage",
		"prepublishOnly": "npm run build",
		"dev": "ts-node-dev --respawn --transpileOnly ./playground/playground.ts"
	},
	"keywords": [
		"email",
		"email-client"
	],
	"author": "Georgios Kampitakis",
	"license": "ISC",
	"devDependencies": {
		"@types/jest": "^25.1.3",
		"@types/nodemailer": "^6.4.0",
		"@types/validator": "^12.0.1",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-plugin-import": "^2.20.2",
		"husky": "^4.2.3",
		"jest": "^25.1.0",
		"lint-staged": "^10.1.1",
		"prettier": "^2.0.2",
		"rimraf": "^3.0.2",
		"ts-jest": "^25.2.1",
		"ts-node-dev": "^1.0.0-pre.44",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"@sendgrid/mail": "^6.5.5",
		"handlebars": "^4.7.4",
		"mjml": "^4.6.2"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"files": [
		"lib/**/*"
	],
	"jest": {
		"globals": {
			"ts-jest": {
				"diagnostics": false
			}
		},
		"verbose": true,
		"collectCoverage": true,
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"\\.ts$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/index.ts",
			"!src/**/*.d.ts"
		],
		"coverageThreshold": {
			"global": {
				"branches": 90,
				"functions": 90,
				"lines": 90,
				"statements": 90
			}
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gkampitakis/emailClient.git"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*": "npm run format"
	}
}
