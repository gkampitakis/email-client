{
	"name": "@gkampitakis/email-client",
	"version": "1.0.0",
	"description": "A module implementing an email client",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"scripts": {
		"test": "npm run clean && npm run eslint && jest",
		"build": "npm run clean && tsc",
		"format": "prettier --write ./src/**/*",
		"eslint": "eslint src/**/*.ts",
		"clean": "rimraf ./lib ./coverage",
		"prepublishOnly": "npm run build",
		"dev": "ts-node-dev --respawn --transpileOnly ./playground/playground.ts",
		"release": "semantic-release"
	},
	"keywords": [
		"email",
		"email-client"
	],
	"author": "Georgios Kampitakis",
	"license": "ISC",
	"devDependencies": {
		"@semantic-release/changelog": "^5.0.0",
		"@semantic-release/commit-analyzer": "^8.0.1",
		"@semantic-release/git": "^9.0.0",
		"@semantic-release/npm": "^7.0.5",
		"@semantic-release/release-notes-generator": "^9.0.1",
		"semantic-release": "^17.0.4",
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^8.3.4",
		"@types/jest": "^25.2.1",
		"@types/node": "^13.11.0",
		"@types/postmark": "^2.0.3",
		"@typescript-eslint/eslint-plugin": "^2.27.0",
		"@typescript-eslint/parser": "^2.27.0",
		"codecov": "^3.6.5",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-plugin-import": "^2.20.2",
		"husky": "^4.2.3",
		"jest": "^25.3.0",
		"prettier": "^2.0.4",
		"pretty-quick": "^2.0.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^25.3.1",
		"ts-node-dev": "^1.0.0-pre.44",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"@sendgrid/mail": "^7.0.0",
		"aws-sdk": "^2.658.0",
		"handlebars": "^4.7.6",
		"mailgun-js": "^0.22.0",
		"mandrill-api": "^1.0.45",
		"mjml": "^4.6.2",
		"postmark": "^2.5.1"
	},
	"files": [
		"lib/**/*"
	],
	"jest": {
		"globals": {
			"ts-jest": {
				"diagnostics": false
			}
		},
		"verbose": true,
		"collectCoverage": true,
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"\\.ts$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/index.ts",
			"!src/**/*.d.ts"
		],
		"coverageThreshold": {
			"global": {
				"branches": 90,
				"functions": 90,
				"lines": 90,
				"statements": 90
			}
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gkampitakis/email-client.git"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	}
}
